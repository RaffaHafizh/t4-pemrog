#include <iostream> // pustaka standar untuk input & output
using namespace std;

int main () {
        // deklarasi variabel untuk menyimpan jumlah belanja 2 pelanggan
        double belanja1, belanja2;
        
        // judul program
        cout << "=== PROGRAM WARUNG - BANDINGKAN BELANJA DUA PELANGAN ===" << endl;
        
        // input belanja pelanggan pertama
        cout << "Masukan jumlah belanja pelanggan 1: Rp ";
        cin >> belanja1;
        
        // input belanja pelanggan kedua
        cout << "Masukan jumlah belanja pelanggan 2: Rp ";
        cin >> belanja2;
        
        // menampilkan hasil perbandingan
        cout << "\n--- HASIL PERBANDINGAN ---" << endl;

        // kondisi jika pelanggan 1 belanja lebih banyak
        if (belanja1 > belanja2) {
                cout << "Pelanggan 1 belanja lebih banyak daripada Pelanggan 2." << endl;
        } 
        // kondisi jika pelanggan 2 belanja lebih banyak
        else if (belanja2 > belanja1) {
                cout << "Pelanggan 2 belanja lebih banyak daripada Pelanggan 1." << endl;
        } 
        // kondisi jika jumlah belanja sama
        else {
                cout << "Kedua pelanggan belanja dengan jumlah yang sama."  << endl;
        }
        
        return 0; // program selesai
}
